<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.handykanban"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.handykanban.StartupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.handykanban.KanBanUIActivity" >
        </activity>
        <activity
            android:name="com.handykanban.TaskDetalInfoActivity"
            android:label="@string/title_activity_task_detal_info" >
        </activity>
        <activity android:name="com.handykanban.AdminPage" >
        </activity>
        <activity
            android:name="com.handykanban.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.handykanban.StartupActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.handykanban.StartupActivity" />
        </activity>
        <activity
            android:name="com.handykanban.Configuration"
            android:label="@string/title_activity_configuration" >
        </activity>
        <activity android:name="PickupToDoTask"></activity>
    </application>

</manifest>
