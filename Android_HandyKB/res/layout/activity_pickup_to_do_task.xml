<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PickupToDoTask" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="133dp"
        android:layout_marginTop="198dp"
        android:orientation="vertical" >
    </LinearLayout>

    <ListView
        android:id="@+id/pickupToDoTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonUpdateTodo"
        android:layout_below="@+id/textView_toDoSummary" >

    </ListView>

    <TextView
        android:id="@+id/textView_toDoSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pickupToDoTaskList"
        android:layout_alignParentTop="true"
        android:text="@string/title_activity_pickup_to_do_task"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonUpdateTodo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:text="Save Change" />

    <Button
        android:id="@+id/button_newTask"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonUpdateTodo"
        android:layout_alignBottom="@+id/buttonUpdateTodo"
        android:layout_toLeftOf="@+id/buttonUpdateTodo"
        android:text="Add Task" />

</RelativeLayout>