<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskDetalInfoActivity" >

    <EditText
        android:id="@+id/editTextTaskTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Task Title"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewTaskPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority" />    

        <Spinner
            android:id="@+id/spinnerTaskPriority"
            android:layout_marginLeft="30dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTaskDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTaskTitle"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Task Detail"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status" />

        <Spinner
            android:id="@+id/spinnerTaskStatus"
            android:layout_marginLeft="30dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textTaskAssingee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assingee" />

        <Spinner
            android:id="@+id/spinnerTaskAssingee"
            android:layout_marginLeft="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonTaskUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_taskinfo_update" />

        <Button
            android:id="@+id/buttonAssignToMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_taskinfo_assigntome" />

    </LinearLayout>

</LinearLayout>